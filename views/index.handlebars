<div>
    <img class="burger" src="assets/img/burger.png" alt="burger">
    <h1>Eat-Da-Burger!</h1>
</div>
    {{!-- <form action="/" method="POST"> --}}
<form class="container justify-content-center">
    <p class="submit-text"> Enter a burger you want to eat and then click the "Submit" button.</p>
    <input name="burger" id="burger"></textarea>
    <button type="submit" id="submit-btn">Submit</button>
</form>
<br>
<div class="container">
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-6">
            <h3>Available Burgers </h3>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{>burger-list eaten=false}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6">
            <h3> Burgers (Devoured) </h3>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{>burger-list eaten=true}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>
